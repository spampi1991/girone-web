
<%= form_tag(events_path, :method => "get") do %>
    <%= select_tag :season_id, options_from_collection_for_select(Season.all, :id, :name, params[:season_id]), include_blank: true %>
    <%= submit_tag 'Ricerca', { class: 'btn btn-primary' } %>
<% end %>

<br>

<table class="table">
  <thead>
    <tr>
      <th>Squadra</th>
      <th>Goals</th>
      <th>Squadra</th>
      <th>Goals</th>
      <th>Data</th>
      <th>Stagione</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.local_team.name %></td>
        <td><%= event.local_team_goals %></td>
        <td><%= event.away_team.name %></td>
        <td><%= event.away_team_goals %></td>
        <td><%= event.event_date %></td>
        <td><%= event.season.name %></td>
        <% if user_signed_in? %>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Event', new_event_path %>
<% end %>
