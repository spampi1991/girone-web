
<%= form_for @player, html: { multipart: true } do |f| %>

    <%= render 'players/error_messages' %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Name', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :surname %>
        <%= f.text_field :surname, placeholder: 'Surname', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :description %>
        <%= f.text_field :description, placeholder: 'Description', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :birthday %>
        <%= f.date_select :birthday, placeholder: 'Birthday', class: 'form-control', order: [:day, :month, :year], start_year: 1900, use_month_numbers: true %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :role %>
        <%= f.select :role, ['Portiere', 'Difensore', 'Centrocampista', 'Attaccante', 'Staff'], {}, { class: 'form-control' } %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :shirt_number %>
        <%= f.text_field :shirt_number, placeholder: 'Shirt Number', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :preferred_foot %>
        <%= f.select :preferred_foot, ['Dx', 'Sx'], {}, { class: 'form-control' } %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
      <%= f.label :team_id %>
      <%= f.collection_select :team_id, Team.all, :id, :name, { prompt: true }, { class: 'form-control' } %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :order %>
        <%= f.number_field :order, placeholder: 'Order', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :avatar %>
        <%= image_tag(@player.avatar_url) if @player.avatar? %>
        <%= f.file_field :avatar %>
    <% end %>

    <%= f.submit class: 'btn btn-primary' %>

<% end %>
