
<%= form_for(@player, html: { class: "ui form error" }) do |f| %>

    <%= render 'players/error_messages' %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Name', autocomplete: 'off' %>
    </div>

    <div class="field">
      <%= f.label :surname %>
      <%= f.text_field :surname, placeholder: 'Surname', autocomplete: 'off' %>
    </div>

    <div class="field">
      <%= f.label :birthday %>
      <%= f.text_field :birthday, class: 'date_field', placeholder: 'Birthday', autocomplete: 'off' %>
    </div>

    <div class="field">
      <%= f.label :role %>
      <%= f.text_field :role, placeholder: 'Role', autocomplete: 'off' %>
    </div>

    <div class="field">
      <%= f.label :shirt_number %>
      <%= f.text_field :shirt_number, placeholder: 'Shirt Number', autocomplete: 'off' %>
    </div>

    <div class="field">
      <%= f.label :preferred_foot %>
      <%= f.text_field :preferred_foot, placeholder: 'Preferred Foot', autocomplete: 'off' %>
    </div>

    <div class="field">
      <%= f.label :team_id %>
      <%= f.collection_select :team_id, Team.all, :id, :name, { prompt: true }, { class: 'ui search selection dropdown' } %>
    </div>

    <%= f.submit class: 'ui right floated primary button' %>

<% end %>
