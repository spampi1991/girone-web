<h1 class="text-center">Players</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Birthday</th>
    <th>Role</th>
    <th>Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.surname %></td>
        <td><%= player.birthday %></td>
        <td><%= player.role %></td>
        <td><%= player.team.name %></td>
        <td><%= link_to "Show", player, class:'btn btn-info' %></td>
        <td><%= link_to "Edit", edit_player_path(player), class:'btn btn-warning' %></td>
        <td><%= link_to "Remove", player, method: :delete, data: { confirm: "Are you sure?" }, class:'btn btn-danger' %></td>
      </tr>
  <% end %>
</table>

<%= paginate @players %>

<br>

<%= link_to "New Player", new_player_path, class: 'btn btn-primary' %>
