
<%= form_for(@season) do |f| %>

    <%= render 'seasons/error_messages' %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Name', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :year %>
        <%= f.text_field :year, placeholder: 'Year', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= f.submit class: 'btn btn-primary' %>

<% end %>

