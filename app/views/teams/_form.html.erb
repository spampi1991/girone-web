
<%= form_for(@team) do |f| %>

    <%= render 'teams/error_messages' %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Name', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :stadium %>
        <%= f.text_field :stadium, placeholder: 'Stadium', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :address %>
        <%= f.text_field :address, placeholder: 'Address', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :telephone %>
        <%= f.telephone_field :telephone, placeholder: 'Telephone', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :pitch_type %>
        <%= f.text_field :pitch_type, placeholder: 'Pitch Type', autocomplete: 'off', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :avatar %>
        <%= image_tag(@team.avatar_url) if @team.avatar? %>
        <%= f.file_field :avatar %>
    <% end %>

    <%= f.submit %>

<% end %>
