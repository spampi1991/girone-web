<h1 class="text-center">Available Teams</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Stadium</th>
    <th>Foundation Year</th>
    <th>Telephone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td><%= team.stadium %></td>
      <td><%= team.foundation_year %></td>
      <td><%= team.telephone %></td>
      <td><%= link_to "Show", team %></td>
      <td><%= link_to "Edit", edit_team_path(team) %></td>
      <td><%= link_to "Remove", team, method: :delete, data: { confirm: "Are you sure?" }%></td>
    </tr>
  <% end %>
</table>

<br>

