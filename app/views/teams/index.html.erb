<h1 class="text-center">Teams</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(teams_path, :method => "get", id: 'search-form', enforce_utf8: false) do %>
      <%= text_field_tag :search, params[:search], placeholder: 'Search Teams' %>
      <%= submit_tag "Search", :name => nil, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<br>

<% if @teams.blank? %>
    <h4>There are no teams containing the term <%= params[:search] %></h4>
<% else %>
    <%= render 'teams/post' %>
<% end %>

<br>

<%= link_to "New Team", new_team_path, class: 'btn btn-primary' %>
